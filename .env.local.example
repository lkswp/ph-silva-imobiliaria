# ===========================================
# Banco (Railway MySQL) – use a mesma URL na Vercel
# No Railway a variável pode ser MYSQL_URL; na Vercel use DATABASE_URL
# ===========================================
DATABASE_URL=mysql://user:password@localhost:3306/ph_silva
# Ou cole a URL do Railway: mysql://root:xxx@containers-us-west-xxx.railway.app:6543/railway

# ===========================================
# NextAuth (obrigatório na Vercel)
# Gere o secret: openssl rand -base64 32
# ===========================================
NEXTAUTH_SECRET=seu_secret_aqui_gerar_com_openssl_rand_base64_32
NEXTAUTH_URL=http://localhost:3000
# Na Vercel use: https://seu-projeto.vercel.app

NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Na Vercel use: https://seu-projeto.vercel.app

# ===========================================
# Opcionais
# ===========================================
GOOGLE_MAPS_API_KEY=sua_api_key_google_maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=sua_api_key_google_maps

WHATSAPP_NUMBER=5511999999999
NEXT_PUBLIC_WHATSAPP_NUMBER=5511999999999

